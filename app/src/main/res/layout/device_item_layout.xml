<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/deviceButtonConstant"
    android:layout_height="@dimen/deviceButtonConstant"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/device_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/device_item_imageButton"
        android:layout_width="@dimen/deviceButtonConstant"
        android:layout_height="@dimen/deviceButtonConstant"
        android:layout_margin="4dp"
        android:background="@drawable/light_bulb_off_dark"
        android:scaleType="fitXY" />
</LinearLayout>