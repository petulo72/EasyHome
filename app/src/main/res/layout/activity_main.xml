<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/grey2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/favouriteContentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:text="Obľúbené"
            android:textColor="#D5D5D5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/favouriteContentGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="#3541bdff"
            android:numColumns="auto_fit"></GridView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/houseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:clickable="false"
            android:text="Domy"
            android:textColor="#D5D5D5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/houseViewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>
